    <div class="contenedor">
        <h2>Agregar Nuevo Barbero</h2>
        <form>
            <label for="name">Nombre Barbero *</label>
            <input type="text" id="name" required>

            <label for="phone">Número Teléfono *</label>
            <input type="text" id="phone" required>

            <label for="email">Email *</label>
            <input type="email" id="email" required>

            <label for="description">Descripción *</label>
            <textarea name="" id="description"></textarea required> 

            <label for="photo">Foto de Perfil</label>
            <input type="file" id="photo" accept="image/png, image/jpeg, image/jpg">
            <input type="button" value="Seleccionar Archivo" class="boton-subir" onclick="document.getElementById('photo').click()">

            <label for="pass">Contraseña *</label>
            <input type="password" id="pass" required>

            <input type="submit" value="Registrar" class="boton">
        </form>
    </div>
    <script>
        let area = document.getElementById('description').style.resize = "none";

        document.getElementById('phone').addEventListener('input', function (e) {
            var input = e.target.value;
            var filtered = input.replace(/[^0-9+\-\s]/g, ''); 
            if (input !== filtered) {
                e.target.value = filtered;
            }
        });
    </script>


