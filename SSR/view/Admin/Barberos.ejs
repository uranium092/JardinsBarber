<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Barberos</title>
    <link rel="stylesheet" href="/admin/styles/Barberos.css" />
    <link rel="shortcut icon" href="/PagInicio/ImagesPagInicio/favicon.png" type="image/x-icon" />
  </head>
  <style></style>
  <body>
    <header>
      <nav>
        <div class="logo">Jardin's Barber</div>
        <div class="menu">
          <ul>
            <li><a href="/index">Inicio</a></li>
            <li><a href="/admin/verAgenda">Agenda</a></li>
            <li><a href="/admin/barberos">Barberos</a></li>
            <li><a href="/admin/datosAdmin">Perfil</a></li>
            <li><a href="/borrarCookies" class="cerrar">Cerrar sesión</a></li>
          </ul>
        </div>
      </nav>
    </header>

    <div class="contenedor-barber">
      <div class="hea">
        <a href="/admin/agregarBarbero" id="btn-add"
          ><button class="boton1">Nuevo Barbero</button></a
        >
      </div>

      <div class="lista-barber">
        <% data.forEach(function(barber) { %> <%if(id!=barber.idBarber){%>
        <div class="barbero item-barber" data-key="<%=barber.idBarber%>">
          <img src="<%= barber.profilePicture == "" ?
          "http://localhost:8080/images/same/profile.png" : "http://localhost:8080/images/" +
          barber.idBarber + "/" + barber.profilePicture %>" data-key="<%=barber.idBarber%>">
          <div class="barber-info">
            <h2 class="barber-name"><%= barber.nameBarber %></h2>
            <div class="barber-action">
              <button type="button" class="watch" data-key="<%=barber.idBarber%>">
                Inspeccionar
              </button>
              <button
                type="button"
                class="delete"
                data-key="<%=barber.idBarber%>"
                data-name="<%=barber.nameBarber%>"
              >
                Eliminar
              </button>
            </div>
          </div>
        </div>
        <%};%> <% }); %>
      </div>
    </div>

    <footer id="pieDePagina">
      <div id="footerBloque1">
        <p>Cra. 4 #7 - 73, Jardín, Antioquia</p>
        <p>Cel: 322-4567856</p>
      </div>
      <br />

      <div id="footerBloque2">
        <p>Jardín-Antioquia</p>
        <p>jardinsbarber@gmail.com</p>
        <p style="font-weight: bold">Jardin's Barber</p>
        <div id="footerIcons">
          <p><i class="fa-brands fa-facebook"></i></p>
          <p><i class="fa-brands fa-instagram"></i></p>
        </div>
      </div>
    </footer>
    <script src="https://kit.fontawesome.com/18096fdcd6.js" crossorigin="anonymous"></script>
  </body>
  <script src="/admin/JS/jquery-3.7.1.js"></script>
  <script src="/admin/JS/LogicaBarberos.js"></script>
</html>
